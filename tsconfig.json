{
    "compilerOptions": {
        "target":"ES2018",
        "module": "commonjs",
        "lib": ["es2018"],
        "declaration": true,
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": false,
        "inlineSourceMap": true,
        "inlineSources": true,
        "experimentalDecorators": true,
        "strictPropertyInitialization":false,
        "typeRoots": ["./node_modules/@types"],
        "allowJs": true,
        "forceConsistentCasingInFileNames": true,
        "importHelpers": true,
        "newLine": "lf",
        "noEmit": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "removeComments": true,
    },
    "include": [
        "**/*.ts"
      ],
      "exclude": [
        ".git",
        "dist",
        "docs",
        "node_modules",
        "cdk.out"
      ]
}